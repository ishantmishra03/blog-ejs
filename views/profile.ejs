<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile | Blog</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full min-h-screen text-white bg-zinc-900">
      <!-- Header  -->
      <div class="p-5">
        <div class="flex justify-end w-full">
          <a href="/logout" class="inline-block bg-red-500 px-3 py-2 rounded-md"
            >Logout</a
          >
        </div>
        <h1 class="text-3xl">
          <span class="font-light tracking-tight">Hello, </span><%= user.name %>
          üñê
        </h1>
      </div>

      <!-- Main  -->
      <div class="p-5">
        <form method="post" action="/post">
          <textarea
            name="content"
            class="w-1/3 bg-zinc-800 tracking-tight rounded-md border border-white/10 text-white p-3"
            rows="3"
            placeholder="What's on your mind ?"
          ></textarea>
          <button
            type="submit"
            class="w-40 mt-1 block px-3 py-2 rounded-md bg-blue-500 cursor-pointer hover:bg-blue-600 transition-all text-sm"
          >
            Create Post
          </button>
        </form>
      </div>

      <!-- Posts  -->
      <div class="posts p-5">
        <% user.posts.reverse().forEach(function(post) { %>
        <div
          class="post w-1/3 bg-zinc-800 p-4 rounded-md border border-blue-500/10 mb-2"
        >
          <h3 class="text-blue-400">@<%= user.username %></h3>
          <p class="tracking-tight">
            <%= post.content %>
          </p>
          <small class="mt-5 block">
            <%= post.likes.length %> 
            <%= (post.likes.length === 1) ? "like" : "likes" %>
          </small>
          <div class="flex gap-5 mt-1">
            <a href="/like/<%= post._id %>" class="text-blue-400">
              <%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike" %>
            </a>
            <a href="/edit/<%= post._id %>" class="text-zinc-600">Edit</a>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
